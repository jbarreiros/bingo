{
  "name": "bingo",
  "version": "1.0.0",
  "description": "A silly pile of code trying to pass itself off as a multi-player bingo game.",
  "private": true,
  "scripts": {
    "start": "node ./server.js",
    "start:dev": "nodemon ./server.js",
    "stop": "pkill --signal SIGINT BingoApp",
    "build": "run-s clean lint build:js",
    "build:js": "webpack",
    "build:dev": "npm run build:js -- --mode=development --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npm-run-all clean --parallel start:dev build:dev",
    "clean": "rimraf public/*.{css,js}",
    "lint": "eslint *.js"
  },
  "author": "John Barreiros <johnbarreiros2@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.4.0",
    "ejs": "^3.0.1",
    "ejs-blocks": "^0.1.4",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "express": "^4.17.1",
    "express-ws": "^4.0.0",
    "mini-css-extract-plugin": "^0.9.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.25",
    "postcss-env-function": "^2.0.2",
    "postcss-jsx": "^0.36.3",
    "postcss-loader": "^3.0.0",
    "postcss-syntax": "^0.36.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "style-loader": "^1.1.1",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.9"
  },
  "dependencies": {
    "core-js": "^3.6.1",
    "lit-element": "^2.2.1",
    "uuid-random": "^1.3.0"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "nodemonConfig": {
    "watch": [
      "src/",
      "server.js"
    ]
  }
}
